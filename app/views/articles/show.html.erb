<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<button>
    <%= link_to "Back to Articles List", articles_path %>
</button>
<button>
    <%= link_to "Edit", edit_article_path(@article) %>
</button>
<button>
    <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
</button>
